<h1>Listing shops</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Long desc</th>
    <th>Coord lat,coord long</th>
    <th>Main shop</th>
    <th>Web,contact phone,contact fax,contact email</th>
    <th>User</th>
    <th>Slug</th>
    <th>State</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.name %></td>
    <td><%= shop.long_desc %></td>
    <td><%= shop.coord_lat,coord_long %></td>
    <td><%= shop.main_shop_id %></td>
    <td><%= shop.web,contact_phone,contact_fax,contact_email %></td>
    <td><%= shop.user_id %></td>
    <td><%= shop.slug %></td>
    <td><%= shop.state_id %></td>
    <td><%= shop.city_id %></td>
    <td><%= link_to 'Show', shop %></td>
    <td><%= link_to 'Edit', edit_shop_path(shop) %></td>
    <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

